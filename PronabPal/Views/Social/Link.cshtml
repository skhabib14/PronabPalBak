@model Models.AdminModels.SocialModel
@{
    ViewBag.Title = "Link";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="contentwrapper">
    <!--Content wrapper-->

    <div class="heading">
        <!--  .heading-->

        <h3>Social Link</h3>

        <div class="resBtnSearch">
            <a href="#"><span class="s16 icomoon-icon-search-3"></span></a>
        </div>
    </div>

    <!-- Start .row -->
    <div class="row">
        <div class="col-lg-12">
            @if (TempData.Count > 0)
            {
                if (!string.IsNullOrEmpty((string)TempData["ErrorMSG_0"]))
                {
                <div class="alert alert-danger fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="glyphicon glyphicon-ban-circle alert-icon"></i>
                    @TempData["ErrorMSG_0"]
                </div>
                }
                if (!string.IsNullOrEmpty((string)TempData["SuccessMSG_0"]))
                {
                <div class="alert alert-success fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="fa fa-check alert-icon"></i>
                    <strong>Success!</strong> @TempData["SuccessMSG_0"]
                </div>
                }
            }
            <div class="panel panel-default">

                <!-- Start .panel -->
                <div class="panel-heading">
                    <h4 class="panel-title">Link</h4>
                </div>
                <div class="panel-body pt0 pb0">
                    <form class="form-horizontal group-border stripped" method="post" enctype="multipart/form-data">


                        <div class="form-group">
                            @Html.LabelFor(model => model.Facebook, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Facebook, new { @class = "form-control", @placeholder = "Enter Facebook link", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Facebook)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Twitter, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Twitter, new { @class = "form-control", @placeholder = "Enter Twitter link", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Twitter)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Youtube, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Youtube, new { @class = "form-control", @placeholder = "Enter Youtube link", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Youtube)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Instagram, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Instagram, new { @class = "form-control", @placeholder = "Enter Instagram link", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Instagram)</span>
                            </div>
                        </div>

                         @*<div class="form-group">
                            @Html.LabelFor(model => model.Linkedin, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Linkedin, new { @class = "form-control", @placeholder = "Enter linkedin link", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Linkedin)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Youtube, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextBoxFor(model => model.Youtube, new { @class = "form-control", @placeholder = "Enter Youtube link", @required = "true" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Youtube)</span>
                            </div>
                        </div>*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @placeholder = "Enter Address", @required = "true", @style = "resize:vertical;" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Address)</span>
                            </div>
                        </div>

                         <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.Contact, new { @class = "col-lg-4 col-md-4 control-label" })
                                    <div class="col-lg-8 col-md-8">
                                        @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", @placeholder = "Enter Contact no.", @required = "true" })
                                        <span style="color: red">@Html.ValidationMessageFor(model => model.Contact)</span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.Email, new { @class = "col-lg-4 col-md-4 control-label" })
                                    <div class="col-lg-8 col-md-8">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Email", @required = "true" })
                                        <span style="color: red">@Html.ValidationMessageFor(model => model.Email)</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Map, new { @class = "col-lg-2 col-md-3 control-label" })
                            <div class="col-lg-10 col-md-10">
                                @Html.TextAreaFor(model => model.Map, new { @class = "form-control", @placeholder = "Enter Map", @required = "true", @style = "resize:vertical;" })
                                <span style="color: red">@Html.ValidationMessageFor(model => model.Map)</span>
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <div class="col-lg-12 col-md-12 text-center">
                                @Html.HiddenFor(model => model.Id)
                                <button type="submit" class="btn btn-success mr5 mb10">Submit</button>
                                <a href="@Url.Action("Dashboard", "Portal")" class="btn btn-primary mr5 mb10">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

