@{
    ViewBag.Title = "details";
    Layout = "~/Views/Shared/_LayoutAfterDashboardView.cshtml";
}

<section>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="spot-details-section">
                <h1 class="heading">@ViewBag.FlowTitle
                    <a href="@Url.Action("index", "flow", new { id = @ViewBag.FlowId })" class="read-more-link pull-right"><i class="fa fa-chevron-left"></i>&nbsp;Back</a>
                </h1>
                <p><span><strong>Flow Id: @ViewBag.FlowId</strong></span> 
                   <span class="pull-right"><strong>Flow No: @ViewBag.FlowNo</strong></span></p>

                <div class="row">
                    <div class="col-md-12">
                        <div class="canvassketchbox">
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <img src="@Url.Content(ViewBag.CanvasSketch)" class="img-responsive" />
                            </div>
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <img src="@Url.Content(ViewBag.ImageVideo)" class="img-responsive" />
                            </div>
                        </div>
                    </div>
                </div>

                <p>@ViewBag.ShortDescription</p>

                @Html.Raw(ViewBag.Description)

                <div class="spot-share">
                    <p>Share to:</p>
                    <ul>
                        <li><a href="">
                            <img src="@Url.Content("~/Content/AfterHome/images/facebook.png")"></a></li>
                        <li><a href="">
                            <img src="@Url.Content("~/Content/AfterHome/images/twitter.png")"></a></li>
                        <li><a href="">
                            <img src="@Url.Content("~/Content/AfterHome/images/insta.png")"></a></li>
                        <li><a href="">
                            <img src="@Url.Content("~/Content/AfterHome/images/linkedin.png")"></a></li>
                        <li><a href="">
                            <img src="@Url.Content("~/Content/AfterHome/images/youtube.png")"></a></li>
                    </ul>
                </div>

                <div class="spot-details-message">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
                            <h2><span>Leave Message</span></h2>
                            <form>
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Name <span>*</span></label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Email <span>*</span></label>
                                            <input type="email" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label>Message <span>*</span></label>
                                            <textarea class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                                        <input type="submit" value="Submit">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


